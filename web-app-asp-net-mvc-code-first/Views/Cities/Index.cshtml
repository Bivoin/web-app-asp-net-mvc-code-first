@using web_app_asp_net_mvc_code_first.Models.Entities
@model List<City>

<h3>Города</h3>

@Html.ActionLink("Добавить запись", "Create", "Cities")

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                Название
            </th>
            <th>
                Действия
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var city in Model)
        {
            <tr>
                <td>
                    @city.Name
                </td>
                <td>
                    @Html.ActionLink("Удалить", "Delete", "Cities", new { id = city.Id }, new { })
                    @Html.ActionLink("Изменить", "Edit", "Cities", new { id = city.Id }, new { })
                </td>
            </tr>
        }
    </tbody>
</table>